<script>
  function submitUpdatePassword() {
    const form = document.getElementById('updatePasswordForm');
    const formData = new FormData(form);
    console.log(formData)
    fetch(window.location.href, { // Đường dẫn API của bạn
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(Object.fromEntries(formData))
    })
      .then(response => response.json())  // Xử lý response thành JSON
      .then(data => {
        if(data.message)
          alert(data.message);
        if(data.success)
          window.location.pathname = "/login";
        else 
          window.location.pathname = "/resetpass";
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Đã có lỗi xảy ra!');  // Thông báo khi có lỗi xảy ra
      });
  }
</script>